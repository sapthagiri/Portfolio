<%= javascript_tag %q{
  $(document).ready(function(){
    $('.about').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $('#sapthagiri').fadeOut();
      $.scrollTo("#about_me", 1000);
      return false;
    });

    $('.portfolio').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $.scrollTo("#portfolio", 1200);
      return false;
    });
    $('.blog').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $.scrollTo("#blog", 1000);
      return false;
    });
    $('.contact').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $.scrollTo("#mail", 1000);
      return false;
    });
    $('.top, .selected').click(function(){
      $('#sapthagiri').show();
      $.scrollTo("#header", 1000);
      $('#about_me, #portfolio, #blog, #mail').hide('slow');
    });
    
    $(".tweet").tweet({
      username: "sapthakiri",
      count: 5,
      loading_text: "loading tweets..."
    });

  });
}%>