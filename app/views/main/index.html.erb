<%= javascript_tag %q{
  $(document).ready(function(){
    $('.about').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $('#sapthagiri').hide();
      $.scrollTo("#about_me", 1000);
      return false;
    });

    $('.portfolio').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $('#sapthagiri').hide();
      $.scrollTo("#portfolio", 1200);
      return false;
    });

    $('.blog').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $('#sapthagiri').hide();
      $.scrollTo("#blog", 1000);
      return false;
    });

    $('.contact').click(function(){
      $('#about_me, #portfolio, #blog, #mail').show();
      $('#sapthagiri').hide();
      $.scrollTo("#mail", 1000);
      return false;
    });

    $('.top, .selected').click(function(){
      $.scrollTo("#header", 1000);
      $('#about_me, #portfolio, #blog, #mail').hide('slow');
    });

    $(".wrapper1 a").each(function(){
        $(this).mouseenter(function(){
            $(this).siblings().show();
        }).mouseleave(function(){
            $(this).next().hide();
        });
    });

    $(".description1").each(function(){
        $(this).mouseenter(function(){
            $(this).show();
        }).mouseleave(function(){
            $(this).hide();
        });
    });

    $(".description1 p").css({"color": "#ffffff", "opacity": "1", "width": "500px", "font-size": "12px"});
    $(".description1 h3").css({"color": "#CC6600", "opacity": "1"});
  });
}%>